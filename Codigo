vp = 90
hp = 0
cm = 200
ch = 250
def setup():
    size(500,270)
    
def draw():
    global vp
    global hp
    background(175)

    fill(map(second(), 0, 59, 255, 0))
    ellipse(hp,vp,50,50,)
    
    hp = hp + 1
    if hp > width:
        hp = 0
    else: 
        hp = map(second(), 0, 59, 0, width)
